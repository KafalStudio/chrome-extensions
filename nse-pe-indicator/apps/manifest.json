{
  "manifest_version": 2,
  
  "version": "0.1",
  "name": "nifty_pe_notifier",
  "description": "Nifty PE Notifier",

  "background": {
    "persistent": false,
    //"page": "main.html",
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "alarms",
    "tabs",
    "webNavigation",
    "*://*.google.com/"
  ]
}
